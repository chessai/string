cabal-version: 2.2
name:
  string
version:
  0.1
synopsis:
  See README for more info
description:
  See README for more info
homepage:
  https://github.com/chessai/string
bug-reports:
  https://github.com/chessai/string/issues
license:
  BSD-3-Clause
license-file:
  LICENSE
author:
  chessai
maintainer:
  chessai <chessai1996@gmail.com>
copyright:
  Â© 2019 chessai
category:
  Text
build-type:
  Simple
extra-doc-files:
    README.md
  , CHANGELOG.md
tested-with:
  GHC == 8.6.5

library
  hs-source-dirs:
    src
  build-depends:
    , base >= 4.11 && < 4.17
    , byteslice
    , bytebuild
    , bytestring
    , primitive >= 0.6.4 && < 0.8
    , text
  exposed-modules:
    String
  default-language:
    Haskell2010
  ghc-options:
    -Wall
    -O2

  extra-libraries:
    simdjson
    stdc++
  include-dirs:
    cbits
  c-sources:
    cbits/validation.cpp

test-suite test
  type:
    exitcode-stdio-1.0
  hs-source-dirs:
    test
  build-depends:
    , base
    , bytestring
    , hedgehog
    , string
    , text
  main-is:
    Main.hs
  other-modules:
    Conversions
  default-language:
    Haskell2010

source-repository head
  type:
    git
  location:
    https://github.com/chessai/string.git
